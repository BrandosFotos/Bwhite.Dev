{
  "compilerOptions": {
    /* === Core Environment === */
    "target": "ES2023",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* === Module System === */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* === React & Next.js === */
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* === Type Safety === */
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // faster builds
    /* === Performance === */
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true,
    /* === Path Aliases === */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true
  },
  /* === Project Structure === */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
